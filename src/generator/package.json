{
  "name": "fornax-tailwind-site",
  "version": "1.0.0",
  "description": "Static site with Fornax, Tailwind CSS, and DaisyUI",
  "private": true,
  "scripts": {
    "build:css": "postcss style/style.css -o _public/style/style.css -c postcss.config.js",
    "watch:css": "postcss style/style.css -o _public/style/style.css -c postcss.config.js --watch"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "11.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "cssnano": "6.0.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^10.1.0",
    "siren-dsl": "0.3.2",
    "tailwind-highlightjs": "^2.0.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-markdown": "1.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.12",
    "daisyui": "^4.12.22"
  }
}
